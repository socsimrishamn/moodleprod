{{!
    @template format_etask/gradingtable_footer

    This template renders the grading table footer.

    Example context (json):
    {
        "select": "<form><select><option>...</option></select></form>",
        "pagingbar": "<nav><ul><li>...</li></ul></nav>",
        "passedlabel": "Passed",
        "failedlabel": "Failed",
        "popover": "<div class=\"...\">...</div>"
    }
}}

<div class="d-flex justify-content-md-between justify-content-center flex-wrap">
    <div class="mt-1 mr-2">
        {{{select}}}
    </div>

    <div class="mr-2">
        {{{pagingbar}}}
    </div>

    <div class="mt-2">
        <span class="mr-1 d-none d-md-inline">{{#str}}legend, format_etask{{/str}}</span>
        <span class="badge badge-warning text-white p-2">{{#str}}gradeitemcompleted, format_etask{{/str}}</span>
        <span class="badge badge-success text-white p-2">{{passedlabel}}</span>
        <span class="badge badge-danger text-white p-2">{{failedlabel}}</span>

        {{#popover}}
            <a href="javascript:void(null)" class="d-inline-block dropdown-toggle font-weight-normal" data-toggle="etask-popover"
               data-content="{{popover}}"><i class="icon fa fa-question-circle text-info fa-fw mr-0 ml-1"></i></a>
        {{/popover}}
    </div>
</div>
